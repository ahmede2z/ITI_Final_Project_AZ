@model IEnumerable<Department>

<h1 class="display-1 text-center text-danger">
    Departments
</h1>

<table class="table table-bordered table-striped table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(e=> e.Id)
            </th>
            <th>
                @Html.DisplayNameFor(e=> e.Name)
            </th>
            <th>
                @Html.DisplayNameFor(e=> e.Description)
            </th>
            <th>options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Departments"asp-action="GetDetailsView"asp-route-id="@item.Id">
                                <button type="button" class="btn btn-success"><i class="bi bi-list-ul"></i> Details</button>
                            </a>

                            <a asp-controller="Departments" asp-action="GetDeleteDepartment" asp-route-id="@item.Id">
                                <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                            </a>

                            <a asp-controller="Departments"asp-action="GetModifyView"asp-route-id="@item.Id">
                                <button type="button" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Modify</button
                         </a>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-center">
                <strong>
                    Total
                </strong>
            </td>
            <td colspan="1"> </td>
        </tr>
    </tfoot>
</table>
